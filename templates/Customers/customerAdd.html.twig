{% extends 'base.html.twig' %}

{% block title %}Nouveau Customer{% endblock %}

{% block titre %}Customer/Nouveau{% endblock %}

{% block body %}

{{ form_start(customerForm) }}

<div class="row">
    <div class="col">
       {{form_row(customerForm.firstName)}}
    </div>
    <div class="col">
      {{form_row(customerForm.name)}}
    </div>
</div>
<div class="row">
    <div class="col">
       {{form_row(customerForm.gender)}}
    </div>
</div>   
<div class="row">
    <div class="col">
       {{form_row(customerForm.email)}}
    </div>
    <div class="col">
      {{form_row(customerForm.phone)}}
    </div>
</div> 
<div class="row">
    <div class="col">
       {{form_row(customerForm.address)}}
    </div>
</div>   
<div class="row">
    <div class="col">
       {{form_row(customerForm.zipCode)}}
    </div>
    <div class="col">
      {{form_row(customerForm.city)}}
    </div>
</div>   
<div class="row">
    <div class="col">
       {{form_row(customerForm.enregistrer)}}
    </div>
    <div class="col">
       {{form_row(customerForm.measurement)}}
    </div>
</div>   

{{ form_end(customerForm) }}

{% endblock %}
