{% extends 'base.html.twig' %}

{% block title %}Nouveau Client{% endblock %}

{% block titre %}Client/Nouveau{% endblock %}

{% block body %}

{{ form_start(customerForm) }}

<div class="row row-cols-2">
    <div class="col">
       {{form_row(customerForm.firstName)}}
    </div>
    <div class="col">
      {{form_row(customerForm.name)}}
    </div>
</div>
<div class="row">
    <div class="col-4">
       {{form_row(customerForm.gender)}}
</div>   
<div class="row">
    <div class="col">
       {{form_row(customerForm.address)}}
    </div>
</div>   
<div class="row">
    <div class="col">
       {{form_row(customerForm.zipCode)}}
    </div>
    <div class="col">
      {{form_row(customerForm.city)}}
    </div>
</div>
<div class="row">
    <div class="col-4">
       {{form_row(customerForm.country)}}
    </div>
</div>    
<div class="row">
    </div>
        <div class="col">
       {{form_row(customerForm.email)}}
    </div>
    <div class="col">
      {{form_row(customerForm.phone)}}
    </div>
</div> 
<div class="row">
    <div class="col-2">
       {{form_row(customerForm.save)}}
    </div>
    <div class="col">
       {{form_row(customerForm.measurement)}}
    </div>
</div>   

{{ form_end(customerForm) }}

{% endblock %}
