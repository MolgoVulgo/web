{% extends 'base.html.twig' %}

{% block title %}Category of Products{% endblock %}

{% block titre %}Setting/Category of Products{% endblock %}

{% block body %}

<ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link active" href="#">Category of products</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="{{ path('setting_fees') }}">Fees</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Link</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Configuration</a>
    </li>
</ul>
<div class=row>
  <div class="col">
    <a class="btn btn-primary" href="{{ path('setting_category_add') }}" role="button">Add</a>
  </div>
</div>
<div class="row">
  <div class="col">
    <table class="table">
     <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Note</th>
        <th>Action<th>
      </th>
      </thead>
      <tbody>
        {% for category in categories %}
          <tr data-id="{{category.id}}">
            <td>{{category.id }}</td>
            <td>{{category.name}}</td>
            <td>{{category.note}}</td>
            <td></td>
          </tr>
        {% endfor %}
      </tbody>  
    <table>  
  </div>
</div>

{% endblock %}
